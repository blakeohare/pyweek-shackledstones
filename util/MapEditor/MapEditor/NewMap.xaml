<Window x:Class="MapEditor.NewMap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewMap" Height="300" Width="300">
    <Grid>
		<StackPanel Orientation="Vertical">
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Map ID: " />
				<TextBox x:Name="map_id" Width="100"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Width: " />
				<TextBox x:Name="tile_width" Width="100"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Height: " />
				<TextBox x:Name="tile_height" Width="100" />
			</StackPanel>
			<Button x:Name="accept">OK</Button>
		</StackPanel>
	</Grid>
</Window>
