<Window x:Class="MapEditor.ScriptEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScriptEditWindow" Height="300" Width="300">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="30" />
		</Grid.RowDefinitions>
		
		<TextBox x:Name="script_content" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
		<Button Grid.Row="1" x:Name="ok_button">Update</Button>
		
	</Grid>
</Window>
